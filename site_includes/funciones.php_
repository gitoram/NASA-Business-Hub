	$cambiadas   = array( "&quot;","&quot;","&quot;", "&quot;","&quot;","&quot;","&quot;");

	$texto       = str_replace($encontradas, $cambiadas, $texto);

	return $texto;

  }

  else if($opt==2){//poner Comillas

	$texto     = str_replace("&quot;", chr(34),  $texto);	

	return $texto;

  }

}

